@using BluePaw.Shared
@model BluePaw.Shared.PatientRequest

@{
    ViewData["Title"] = "Laboratory - Administrative Request";
    var patients = ((IEnumerable<PatientData>)ViewData["patients"])
        .Select(p => new SelectListItem(p.Name, p.Id.ToString()));
}

<div class="text-center">
    <h2 class="display-4">Create Administrative Request</h2>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <form asp-area="" asp-controller="Laboratory" asp-action="AdministrationRequest" method="post">
                    <div class="form-group">
                        <label>Pet Name</label>
                        <select class="form-control text-center" asp-for="PatientId" asp-items="@patients">
                            <option disabled selected>-- SELECT --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Request"></label>
                        <textarea class="form-control" asp-for="Request" cols="30" rows="10"></textarea>
                    </div>
                    
                    <button class="btn btn-primary" type="submit">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>