@model BluePaw.Shared.CreatePatientRequest

@{
    ViewData["Title"] = "Administrative Department - Create Patient";
    var species = ((IEnumerable<string>)ViewData["species"])
        .Select(x => new SelectListItem(x, x));
}

<div class="text-center">
    <h2 class="display-4">Create Patient</h2>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <form asp-area="" asp-controller="Home" asp-action="Create" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                    </div>

                    <div class="form-group">
                        <label asp-for="OwnerName"></label>
                        <input class="form-control" asp-for="OwnerName">
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="OwnerPhone"></label>
                        <input class="form-control" asp-for="OwnerPhone">
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Species"></label>
                        <select class="form-control text-center" asp-for="Species" asp-items="@species">
                            <option disabled selected>-- SELECT --</option>
                        </select>
                    </div>
                    
                    <button class="btn btn-primary" type="submit">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>