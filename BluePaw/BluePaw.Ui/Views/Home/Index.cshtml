@model IEnumerable<BluePaw.Shared.PatientRequest>

@{
    ViewData["Title"] = "Administrative Department";
}

<div class="text-center">
    <h1 class="display-4">Administrative Department</h1>
    
    <section>
        <a asp-area="" asp-controller="Home" asp-action="Create">Create Patient</a>
    </section>
    
    <h2 class="display-4" style="margin-top: 3rem;">Open Patient Requests</h2>
    
    <div class="container">
        <section class="row justify-content-center">
            <div class="col-sm-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Patient Id</th>
                            <th scope="col">Request</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr scope="row">
                                <td>@request.PatientId</td>
                                <td>@request.Request</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>